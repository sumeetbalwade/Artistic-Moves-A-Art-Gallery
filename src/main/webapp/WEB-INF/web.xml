        <description></description>
        <display-name>EditUserProfileServlet</display-name>
        <servlet-name>EditUserProfileServlet</servlet-name>
        <servlet-class>com.ArtisticMoves.EditUserProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditUserProfileServlet</servlet-name>
        <url-pattern>/EditUserProfile</url-pattern>
    </servlet-mapping>

